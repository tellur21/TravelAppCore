@page
@model TravelAppUI.Pages.PackageDetailsModel
@{
    ViewData["Title"] = Model.TravelPackage?.Name ?? "Package Details";
}

@if (Model.TravelPackage != null)
{
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                        <li class="breadcrumb-item"><a asp-page="/Packages">Travel Packages</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@Model.TravelPackage.Name</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    @if (!string.IsNullOrEmpty(Model.TravelPackage.ImageUrl))
                    {
                        <img src="@Model.TravelPackage.ImageUrl" class="card-img-top" alt="@Model.TravelPackage.Name" style="height: 400px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 400px;">
                            <i class="fas fa-image fa-5x text-muted"></i>
                        </div>
                    }
                    
                    <div class="card-body">
                        <h1 class="card-title display-6">@Model.TravelPackage.Name</h1>
                        <p class="lead text-muted">
                            <i class="fas fa-map-marker-alt me-2"></i>@Model.TravelPackage.Destination
                        </p>
                        
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h6><i class="fas fa-calendar me-2"></i>Travel Dates</h6>
                                <p class="text-muted">
                                    @Model.TravelPackage.StartDate.ToString("MMMM dd, yyyy") - 
                                    @Model.TravelPackage.EndDate.ToString("MMMM dd, yyyy")
                                </p>
                            </div>
                            <div class="col-md-6">
                                <h6><i class="fas fa-clock me-2"></i>Duration</h6>
                                <p class="text-muted">@Model.TravelPackage.Duration days</p>
                            </div>
                        </div>

                        <h5>Package Description</h5>
                        <p class="card-text">@Model.TravelPackage.Description</p>

                        <div class="row mt-4">
                            <div class="col-md-6">
                                <h6><i class="fas fa-users me-2"></i>Group Size</h6>
                                <p class="text-muted">
                                    Maximum @Model.TravelPackage.MaxCapacity travelers
                                    <br>
                                    <span class="badge bg-@(Model.TravelPackage.AvailableSlots > 0 ? "success" : "danger")">
                                        @Model.TravelPackage.AvailableSlots spots available
                                    </span>
                                </p>
                            </div>
                            <div class="col-md-6">
                                <h6><i class="fas fa-info-circle me-2"></i>Status</h6>
                                <p class="text-muted">
                                    <span class="badge bg-@(Model.TravelPackage.Status.ToLower() == "active" ? "success" : "secondary")">
                                        @Model.TravelPackage.Status
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm sticky-top" style="top: 2rem;">
                    <div class="card-body">
                        <h4 class="card-title text-primary">@Model.TravelPackage.Price.ToString("C")</h4>
                        <p class="text-muted">per person</p>
                        
                        @if (Model.TravelPackage.Status.ToLower() == "active" && Model.TravelPackage.AvailableSlots > 0)
                        {
                            <button type="button" class="btn btn-primary btn-lg w-100 mb-3" data-bs-toggle="modal" data-bs-target="#bookingModal">
                                <i class="fas fa-calendar-plus me-2"></i>Book Now
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-secondary btn-lg w-100 mb-3" disabled>
                                <i class="fas fa-times me-2"></i>Not Available
                            </button>
                        }
                        
                        <div class="text-center">
                            <small class="text-muted">
                                <i class="fas fa-shield-alt me-1"></i>
                                Secure booking with instant confirmation
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Booking Modal -->
    <div class="modal fade" id="bookingModal" tabindex="-1" aria-labelledby="bookingModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="bookingModalLabel">Book @Model.TravelPackage.Name</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post">
                    <div class="modal-body">
                        <input type="hidden" asp-for="createBookingCommand.TravelPackageId" value="@Model.TravelPackage.Id" />
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="createBookingCommand.NumberOfTravelers" class="form-label">Number of Travelers</label>
                                <select asp-for="createBookingCommand.NumberOfTravelers" class="form-select">
                                    @for (int i = 1; i <= Math.Min(Model.TravelPackage.AvailableSlots, 10); i++)
                                    {
                                        <option value="@i">@i traveler@(i > 1 ? "s" : "")</option>
                                    }
                                </select>
                                <span asp-validation-for="createBookingCommand.NumberOfTravelers" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="createBookingCommand.SpecialRequests" class="form-label">Special Requests (Optional)</label>
                            <textarea asp-for="createBookingCommand.SpecialRequests" class="form-control" rows="3" placeholder="Any special dietary requirements, accessibility needs, or other requests..."></textarea>
                            <span asp-validation-for="createBookingCommand.SpecialRequests" class="text-danger"></span>
                        </div>
                        
                        <div class="alert alert-info">
                            <h6><i class="fas fa-info-circle me-2"></i>Booking Summary</h6>
                            <p class="mb-1">Package: @Model.TravelPackage.Name</p>
                            <p class="mb-1">Price: @Model.TravelPackage.Price.ToString("C") per person</p>
                            <p class="mb-0">Total: <span id="totalPrice">@Model.TravelPackage.Price.ToString("C")</span></p>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-check me-2"></i>Confirm Booking
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="text-center py-5">
            <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
            <h3>Package Not Found</h3>
            <p class="text-muted">The travel package you're looking for could not be found.</p>
            <a asp-page="/Packages" class="btn btn-primary">View All Packages</a>
        </div>
    </div>
}

@section Scripts {
    <script>
        // Update total price when number of travelers changes
        document.getElementById('BookingRequest_NumberOfTravelers').addEventListener('change', function() {
            const pricePerPerson = @Model.TravelPackage?.Price ?? 0;
            const numberOfTravelers = parseInt(this.value);
            const totalPrice = pricePerPerson * numberOfTravelers;
            document.getElementById('totalPrice').textContent = new Intl.NumberFormat('en-US', {
                style: 'currency',
                currency: 'USD'
            }).format(totalPrice);
        });
    </script>
}

