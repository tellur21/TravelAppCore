@page
@model TravelAppUI.Pages.ContactModel
@{
    ViewData["Title"] = "Contact Us";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="display-5 fw-bold text-center mb-5">Contact Us</h1>
            <p class="lead text-center text-muted mb-5">Get in touch with our travel experts</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Send us a message</h5>
                    <form method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ContactForm.Name" class="form-label">Full Name</label>
                                <input asp-for="ContactForm.Name" class="form-control" placeholder="Enter your full name" />
                                <span asp-validation-for="ContactForm.Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ContactForm.Email" class="form-label">Email</label>
                                <input asp-for="ContactForm.Email" class="form-control" placeholder="Enter your email" />
                                <span asp-validation-for="ContactForm.Email" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="ContactForm.Subject" class="form-label">Subject</label>
                            <input asp-for="ContactForm.Subject" class="form-control" placeholder="Enter the subject" />
                            <span asp-validation-for="ContactForm.Subject" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="ContactForm.Message" class="form-label">Message</label>
                            <textarea asp-for="ContactForm.Message" class="form-control" rows="5" placeholder="Enter your message"></textarea>
                            <span asp-validation-for="ContactForm.Message" class="text-danger"></span>
                        </div>
                        
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-paper-plane me-2"></i>Send Message
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Contact Information</h5>
                    
                    <div class="mb-4">
                        <h6><i class="fas fa-map-marker-alt text-primary me-2"></i>Address</h6>
                        <p class="text-muted">
                            Travel Agency<br>
                            123 Silk Road Street<br>
                            , Uzbekistan 200100
                        </p>
                    </div>
                    
                    <div class="mb-4">
                        <h6><i class="fas fa-phone text-primary me-2"></i>Phone</h6>
                        <p class="text-muted">+998 65 123 4567</p>
                    </div>
                    
                    <div class="mb-4">
                        <h6><i class="fas fa-envelope text-primary me-2"></i>Email</h6>
                        <p class="text-muted">info@TravelApp.com</p>
                    </div>
                    
                    <div class="mb-4">
                        <h6><i class="fas fa-clock text-primary me-2"></i>Business Hours</h6>
                        <p class="text-muted">
                            Monday - Friday: 9:00 AM - 6:00 PM<br>
                            Saturday: 10:00 AM - 4:00 PM<br>
                            Sunday: Closed
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="card shadow-sm mt-4">
                <div class="card-body">
                    <h5 class="card-title">Why Choose Us?</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Local expertise and knowledge
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Personalized travel experiences
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            24/7 customer support
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Best price guarantee
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Secure booking process
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

