@page
@model TravelAppUI.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Login or Register</h3>
                </div>
                <div class="card-body text-center">
                    <p>Sign in with your Google account to continue.</p>
                    
                    <!-- Google Sign-In Button Container -->
                    <div id="g_id_onload"
                         data-client_id="@Model.GoogleClientId"
                         data-context="signin"
                         data-ux_mode="popup"
                         data-callback="handleCredentialResponse"
                         data-auto_prompt="false">
                    </div>

                    <div class="g_id_signin"
                         data-type="standard"
                         data-shape="rectangular"
                         data-theme="outline"
                         data-text="signin_with"
                         data-size="large"
                         data-logo_alignment="left">
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Google Platform Library -->
    <script src="https://accounts.google.com/gsi/client" async defer></script>
    <script>
        const apiBaseUrl = '@Model.ApiBaseUrl';

        // This function will be called by the Google library after a successful sign-in.
        async function handleCredentialResponse(response) {
            console.log("Encoded JWT ID token: " + response.credential);

            try {
                const apiUrl = `${apiBaseUrl}/api/v1/auth/google-login`;
                const apiResponse = await fetch(apiUrl, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    // keep property name consistent with your backend model
                    body: JSON.stringify({ idToken: response.credential })
                });

                if (apiResponse.ok) {
                    const authResult = await apiResponse.json();
                    console.log('Login successful:', authResult);
                    
                    localStorage.setItem('jwt', authResult.token);
                    localStorage.setItem('refreshToken', authResult.refreshToken);
                    
                    window.location.href = '/'; 
                } else {
                    const errorResult = await apiResponse.json();
                    console.error('Login failed:', errorResult.message);
                }
            } catch (error) {
                console.error('An error occurred during login:', error);
            }
        }

    </script>
}
